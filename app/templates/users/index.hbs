<h2>Users</h2>
<button {{action "create"}} class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">New User</button>
<br /><br />
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr><th {{action "setSortBy" "name"}}>Name</th><th {{action "setSortBy" "role"}}>Role</th><th {{action "setSortBy" "email"}}>Email</th><th {{action "setSortBy" "phone"}}>Phone</th></tr>
  </thead>
  <tbody>
{{#each user in model}}
{{user-record user=user}}
{{/each}}
  </tbody>
</table>
