<div class="mdl-card mdl-shadow--2dp add-card-wide">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">New Shift</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <form {{action "submit" on="submit"}}>
      <fieldset>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          {{input value=model.start_time  class="mdl-textfield__input" id="start_time"}}
          <label class="mdl-textfield__label" for="start_time">Start time</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          {{input value=model.end_time  class="mdl-textfield__input" id="end_time"}}
          <label class="mdl-textfield__label" for="end_time">End time</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          {{input value=model.employee_id  class="mdl-textfield__input" id="employee_id"}}
          <label class="mdl-textfield__label" for="employee_id">Employee</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          {{input value=model.manager_id  class="mdl-textfield__input" id="manager_id"}}
          <label class="mdl-textfield__label" for="manager_id">Manager</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          {{input value=model.break  class="mdl-textfield__input" id="break"}}
          <label class="mdl-textfield__label" for="break">Break</label>
        </div>
        <br /><br />
        <input type="submit" value="Submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-button--colored">
        <button {{action 'cancel'}} class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Cancel</button>
      </fieldset>
    </form>
  </div>
</div>
<br /><br />
{{outlet}}
