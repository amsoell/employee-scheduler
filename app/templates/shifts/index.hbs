<h2>Shifts</h2>
<button {{action "create"}} class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">New Shift</button>
<br /><br />
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr><th {{action "setSortBy" "start_time"}}>Start Time</th><th {{action "setSortBy" "end_time"}}>End Time</th><th {{action "setSortBy" "manager_id"}}>Manager ID</th><th {{action "setSortBy" "employee_id"}}>Employee ID</th><th {{action "setSortBy" "break"}}>Break</th></tr>
  </thead>
  <tbody>
{{#each shift in model}}
{{shift-record shift=shift}}
{{else}}
{{/each}}
  </tbody>
</table>