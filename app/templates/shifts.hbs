<h2 id="title">Shifts</h2>
{{outlet}}
<table>
  <thead>
    <tr><th {{action "sort" "start_time"}}>Start Time</th><th {{action "sort" "end_time"}}>End Time</th><th {{action "sort" "manager_id"}}>Manager ID</th><th {{action "sort" "employee_id"}}>Employee ID</th><th {{action "sort" "break"}}>Break</th></tr>
  </thead>
  <tbody>
{{#each shift in model}}
    <tr><td>{{#link-to 'shifts.shift' shift.id}}{{shift.start_time}}{{/link-to}}</td><td>{{#link-to 'shifts.shift' shift.id}}{{shift.end_time}}{{/link-to}}</td><td>{{shift.manager_id}}</td><td>{{shift.employee_id}}</td><td>{{shift.break}}</td></tr>
{{else}}
{{/each}}
  </tbody>
</table>
